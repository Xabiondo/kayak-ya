<?xml version="1.0" encoding "utf-8"?>
<odoo>
    <record id="action_report_booking_details" model="ir.actions.report">
        <field name="name">Detalle de Reserva</field>
        <field name="model"> res.booking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name"> gestion_reservas.report_booking_template</field>
        <field name="report_file">gestion_reservas.report_booking_template</field>
        <field name="binding_model_id" ref="model_res_booking"/>
        <field name="biding_type">report</field>
    </record>
    
    <template id="report_booking_template">
        <t t-call="web.html_container">
            <t t-foteach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Referencia <span t-field="o.name"/></h2>
                        <div class="row mt32  mb32">
                            <div class="col-6">
                                <strong>Cliente:</strong><span t-field="o.patern_id.name"/><br/>
                                <strong>VIP:</strong><span t-field="o.patern_id.is_vip"/>
                            </div>
                            <div class="col-6">
                                <storng>Servicio:</strong> <span t-field="o.service_id.name"/><br/>
                                <strong>Fecha:</strong> <span t-field="o.start_date"/>
                            </div>
                        </div>
                        <h3>Total a pagar:<span t-field="o.price_total"/>â‚¬</h3>
                        <p>Estado:<span t-field="o.state"/></p>
                    </div>
                </t>
            </t>
        </t>
    <template>
</odoo>