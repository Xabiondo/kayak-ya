<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="module_category_kayak">
        <field name="name">GestiÃ³n de Reservas</field>
        <field name="description">Niveles de acceso</field>
        <field name="sequence">10</field>
    </record>

    <record id="group_kayak_user" model="res.groups">
        <field name="name">Usuario</field>
        <field name="category_id" ref="module_category_kayak"/>
    </record>

    <record id="group_kayak_manager" model="res.groups">
        <field name="name">Administrador</field>
        <field name="category_id" ref="module_category_kayak"/>
        <field name="implied_ids" eval="[(4, ref('group_kayak_user'))]"/>
    </record>

    <record id="rule_booking_user_own" model="ir.rule">
        <field name="name">Ver solo mis reservas</field>
        <field name="model_id" ref="model_res_booking"/>
        <field name="domain_force">[('partner_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_kayak_user'))]"/>
    </record>

    <record id="rule_booking_manager_all" model="ir.rule">
        <field name="name">Admin ve todo</field>
        <field name="model_id" ref="model_res_booking"/> <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_kayak_manager'))]"/>
    </record>
</odoo>