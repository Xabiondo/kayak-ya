<?xml version="1.0" encoding="utf-8"?>
    <odoo>
        <record id="view_booking_search" model="ir.ui.view">
            <field name="name">res.booking.search</field>
            <field name="model">res.booking</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <filter string="Mis Reservas" name="my_bookings" domain="[('partner_id.user_id', '=', uid)]"/>
                    <separator/>
                    <filter string="Pendientes" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Confirmados" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                    <group expand="0" string="Agrupar por">
                        <filter string="Cliente" name="group_partner" context="{'group_by': 'partner_id'}"/>
                        <filter string="Estado" name="group_state" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_booking_form" model="ir.ui.view">
            <field name="name">res.booking.form</field>
            <field name="model">res.booking</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_confirm" string="Confirmar Reserva" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,cancelled"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="service_id"/>
                                <field name="price_total" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="invoice_id" invisible="not invoice_id" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_booking_tree" model="ir.ui.view">
            <field name="name">res.booking.tree</field>
            <field name="model">res.booking</field>
            <field name="arch" type="xml">
                <tree decoration-info="state == 'draft'" decoration-success="state == 'confirmed'" decoration-muted="state == 'cancelled'">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="service_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="price_total" sum="Total Ingresos"/> 
                    <field name="state" widget="badge"/>
                </tree>
            </field>
        </record>

        <record id="view_booking_calendar" model="ir.ui.view">
            <field name="name">res.booking.calendar</field>
            <field name="model">res.booking</field>
            <field name="arch" type="xml">
                <calendar string="Reservas" date_start="start_date" date_stop="end_date" color="state" mode="week">
                    <field name="partner_id"/>
                    <field name="service_id"/>
                    <field name="price_total"/>
                </calendar>
            </field>
        </record>

        <record id="action_booking" model="ir.actions.act_window">
            <field name="name">Reservas</field>
            <field name="res_model">res.booking</field> <field name="view_mode">tree,form,calendar</field>
            <field name="search_view_id" ref="view_booking_search"/>
            <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Â¡Crea tu primera reserva!
            </p>
            </field>
        </record>
    </odoo>