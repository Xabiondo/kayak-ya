<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_kayak_service_form" model="ir.ui.view">
        <field name="name">Kayak Service Form</field>
        <field name="model">res.service</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="price" widget="monetary" />
                            <field name="duration" widget="float_time" />
                        </group>
                        <group>
                            <field name="active" widget="boolean_toggle" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Descripcion">
                            <field name="description" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_kayak_service_tree" model="ir.ui.view">
        <field name="name">Kayak Service Tree</field>
        <field name="model">res.service</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="price" />
                <field name="duration" widget="float_time" />
                <field name="active" widget="boolean_toggle" />
            </tree>
        </field>
    </record>

    <record id="action_service" model="ir.actions.act_window">
        <field name="name">Servicios de kayak</field>
        <field name="res_model">res.service</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>